<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_green_t"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="-1000dp"
        android:src="@drawable/ic_green_t"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="390dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtn"
        android:layout_width="45dp"
        android:layout_height="50dp"
        app:cornerRadius="500dp"
        android:backgroundTint="@color/white"
        android:drawableBottom="@drawable/ic_arrow_downward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_green_t"
        />

    <TextView
        android:id="@+id/tv_travia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/mbtn"
        android:text="Travia"
        android:gravity="center"
        android:layout_marginBottom="52dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32dp"
        />

    <ImageView
        android:id="@+id/owl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_owl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_travia"
        />

    <TextView
        android:id="@+id/tv_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/owl"
        android:text="Log in"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginfacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_green_t"
        android:text="Log in Facebook"
        app:cornerRadius="16dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="#0000"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/loginfacebook"
        android:text="OR"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#8F8989"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/upwithemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/or"
        android:text="Up with email"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/upwithemail"
        android:text="game now"
        app:cornerRadius="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="#03A9F4"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>